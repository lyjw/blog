<div class="container-wrapper">

  <div class="row col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">

    <h2 class="session-heading text-center">Password Reset</h2>

    <%= form_tag password_resets_path do %>

      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>

      <div class="form-group text-center sign-in-button">
        <%= submit_tag "Send Reset Instructions", class: "btn btn-default" %>
      </div>

    <% end %>

  </div>

</div>
