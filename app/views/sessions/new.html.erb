<div class="container-wrapper">

  <div class="row col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">

    <h1 class="session-heading text-center">Sign In</h1>

    <%= form_tag sessions_path do %>

      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>

      <%= link_to "Forgot Password? Click here.", new_password_reset_path %><br><br>

      <div class="form-group text-center sign-in-button">
        <%= submit_tag "Log In", class: "btn btn-default"%>
      </div>


    <% end %>
  </div>

</div>
