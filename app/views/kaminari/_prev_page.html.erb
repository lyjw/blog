<% if current_page.first? %>
  <li class="disabled">
    <%= content_tag :a do %>
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <% end %>
  </li>
<% else %>
  <li class="waves-effect">
    <%= link_to url, :rel => 'prev', :remote => remote do %>
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <% end %>
  </li>
<% end %>
