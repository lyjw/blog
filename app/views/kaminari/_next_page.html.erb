<% if current_page.last? %>
  <li class="disabled">
    <%= content_tag :a do %>
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <% end %>
  </li>
<% else %>
  <li class="waves-effect">
    <%= link_to url, :rel => 'next', :remote => remote do %>
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <% end %>
  </li>
<% end %>
