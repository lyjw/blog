<h1><%= @post.title %></h1>

<p>
  <%= @post.body %>
</p>

<div>
  <%= link_to "Edit Post", edit_post_path(@post) %> |
  <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post: #{@post.title}?"} %>
</div>

<div>
  <%= link_to "New Comment", new_comment_path %>
</div>
