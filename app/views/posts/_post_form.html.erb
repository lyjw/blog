<% if @post.errors.any? %>
  <h2>Error:</h2>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.order(:title), :id, :title %>
  </div>

  <%= f.submit %>

<% end %>
