<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
</head>
<body>
  <div class="container">

    <div>
      <%= notice || alert %>
    </div>

    <hr>

    <%= link_to "Home", home_path %> |
    <%= link_to "About", about_path %> |
    <%= link_to "Posts", posts_path %> |

    <% if user_signed_in? %>
      <%= link_to "New Post", new_post_path %>
    <% end %>

    <div class="user-services">

      <% if user_signed_in? %>
        Welcome, <%= link_to "#{ current_user.first_name }", user_path(current_user) %> |
        <%= link_to "Your Favourites", user_favourites_path(current_user) %>
        |
        <%= link_to "Log Out", sessions_path, method: :delete, data: { confirm: "Are you sure you want to log out?" } %>
      <% else %>
        <%= link_to "Sign Up", new_user_path %> |
        <%= link_to "Sign In", new_session_path %>
      <% end %>

    </div>

    <%= yield %>
  </div>

</body>
</html>
